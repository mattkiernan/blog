<div class="header">
  <h1><%= link_to "Kiernan", root_path %></h1>
</div>
<div class="navigation">
  <%= render "layouts/navigation" %>
</div>
<div class="post-title">
  <h2><%= @post.title %></h2>
  <% if signed_in? %>
    <%= link_to "Edit post", edit_post_path(@post) %>
    <%= button_to "Delete post", @post, method: :delete %>
  <% end %>
  <h5><%= @post.pretty_time %></h5>
</div>
<div class="post-body">
  <p><%= @post.body.gsub(/\n/, '<br/>').html_safe %></p>
</div>
